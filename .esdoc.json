{
  "source": "./src",
  "destination": "./docs",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "manual": {
          "globalIndex": true,
          "files": [
            "./README.md",
            "./CHANGELOG.md",
            "./LICENSE.md",
            "./CONTRIBUTING.md"
          ]
        }
      }
    },
    {
      "name": "esdoc-importpath-plugin",
      "option": {
        "stripPackageName": false,
        "replaces": [
          {"from": "^src/index.js", "to": ""}
        ]
      }
    }
  ]
}
